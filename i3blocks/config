[mpd]
command=~/.config/i3blocks/scripts/mpd.i3block
label=
interval=once
signal=1

# Guess the weather hourly
[weather]
command=curl -Ss "https://wttr.in/$(cat ~/.config/personal/location)?0&T&Q" | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

[mem]
command=free -m | grep Mem | awk '{print $7, $2}'
label=MEM 
interval=3

[volume]
command=~/.config/i3blocks/scripts/alsa.i3block
label=VOL 
instance=Master
interval=once
signal=10

[time]
command=date +"%a, %b %d %Y %R"
interval=60

