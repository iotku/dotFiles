#!/bin/bash
set -e
case $BLOCK_BUTTON in
    1) dunstctl set-paused toggle;; # Left Click
    3) dunstctl close-all;; # Right click
    4) dunstctl history-pop;; # Scroll Up
    5) dunstctl close;; # scroll down
esac

# Print status
WAITING=$(dunstctl count waiting)
if [[ "$WAITING" != "0" ]]; then WAITING="($WAITING) "; else WAITING="";fi
[[ $(dunstctl is-paused) == "true" ]] && echo "${WAITING}off" || echo "on"
